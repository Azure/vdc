                    "subnetName": {
                        "value": "${ArchetypeParameters.Parameters.Jumpbox.SubnetName}"
                    },
                    "adminUsername": {
                        "value": "${ArchetypeParameters.Parameters.Jumpbox.AdminUsername}"
                    },
                    "adminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "reference(KeyVault.keyVaultResourceId)"
