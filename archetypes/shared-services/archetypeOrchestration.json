        {
            "Name": "EnableServiceEndpointOnDiagnosticStorageAccount",
            "ModuleDefinitionName": "StorageAccounts",
            "Updates": "DiagnosticStorageAccount",
            "Comments": "Enables Service endpoint on the Storage Account",
            "Deployment": {
